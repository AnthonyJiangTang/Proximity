{
    styles: {
        name: {
            font: "Beleren2016-Bold",
            color: "#000000",
            size: 160
        },
        type: {
            font: "Beleren2016",
            color: "#000000",
            size: 130
        },
        // These are the styles to be used for symbols
        white: "#FFFFFF",
        blue: {
            color: null,
            outline: {
                weight: 5,
                color: "#000040"
            }
        },
        black: "#000000",
        red: "#FF0000",
        green: "#00FF00",
        // These are the styles to be used for symbols in the body of the card
        // If this section is omitted, they will use the same style defined above
        "symbols_body.white": "#FFFFFF",
        "symbols_body.blue": "#0000FF",
        "symbols_body.black": "#000000",
        "symbols_body.red": "#FF0000",
        "symbols_body.green": "#00FF00"
    },
    layers: [
        // If a layer is a list of layers, we'll render the first layer whose conditions match, if any
        [
            [
                {
                    type: "image",
                    src: "backgrounds/artifact.png",
                    conditions: {
                        // You can check for any type/supertype
                        // Subtypes are not currently supported
                        vehicle: true
                    }
                },
                {
                    type: "image",
                    src: "backgrounds/artifact.png",
                    conditions: {
                        artifact: true
                    }
                }
            ],
            {
                type: "image",
                src: "backgrounds/land.png",
                conditions: {
                    land: true
                }
            },
            {
                type: "image",
                // There are certain placeholders defined for image paths
                src: "backgrounds/${card.color}.png",
                conditions: {
                    colorCount: 1
                }
            },
            {
                type: "image",
                src: "backgrounds/gold.png",
                conditions: {
                    hybrid: false
                }
            },
            {
                type: "image",
                // Some placeholders can even be used multiple times!
                src: "backgrounds/${card.color}.png",
                conditions: {
                    hybrid: true
                }
            }
        ],
        {
            type: "art",
            // Any layer can contain x and y offsets
            x: 352,
            y: 605,
            // The art layer is special in that it can also contain a width and/or height
            // If both are provided, the layer will be stretched or shrunk to cover that area
            // If only one is provided, the layer will be stretched or shrunk to fit that dimension
            // while keeping the image proportional with its original dimensions
            width: 2584,
            height: 1882
        },
        // If a layer is just a string, we'll treat that as if it was the 'src' value for a layer with no conditions
        {
            type: "image",
            src: "pinlines/shadow.png"
        },
        [
            {
                type: "image",
                src: "borders/legendary.png",
                conditions: {
                    legendary: true
                }
            },
            {
                type: "image",
                src: "borders/default.png"
            }
        ],
        [
            {
                type: "compound",
                children: [
                    {
                        type: "image",
                        src: "pinlines/land/artifact.png",
                        conditions: {
                            artifact: true,
                            colorCount: 0
                        }
                    },
                    {
                        type: "image",
                        src: "pinlines/land/colorless.png",
                        "conditions": {
                            artifact: false,
                            colorCount: 0
                        }
                    },
                    {
                        type: "image",
                        src: "pinlines/land/${card.color}.png",
                        conditions: {
                            colorCount: 1
                        }
                    },
                    {
                        type: "image",
                        src: "pinlines/land/gold.png"
                    }
                ],
                conditions: {
                    land: true
                }
            },
            [
                {
                    type: "image",
                    src: "pinlines/standard/artifact.png",
                    conditions: {
                        artifact: true,
                        colorCount: 0
                    }
                },
                {
                    type: "image",
                    src: "pinlines/standard/colorless.png",
                    "conditions": {
                        artifact: false,
                        colorCount: 0
                    }
                },
                {
                    type: "image",
                    src: "pinlines/standard/${card.color}.png",
                    conditions: {
                        colorCount: 1
                    }
                },
                {
                    type: "image",
                    src: "pinlines/standard/${card.color}.png",
                    conditions: {
                        colorCount: 2
                    }
                },
                {
                    type: "image",
                    src: "pinlines/standard/gold.png"
                }
            ]
        ],
        {
            type: "compound",
            children: [
                {
                    type: "image",
                    src: "pt/vehicle.png",
                    conditions: {
                        vehicle: true
                    }
                },
                {
                    type: "image",
                    src: "pt/${card.color}.png",
                    conditions: {
                        colorCount: 1
                    }
                },
                {
                    type: "image",
                    src: "pt/artifact.png",
                    conditions: {
                        colorCount: 0,
                        artifact: true
                    }
                },
                {
                    type: "image",
                    src: "pt/gold.png",
                    conditions: {
                        hybrid: false
                    }
                },
                {
                    type: "image",
                    src: "pt/colorless.png"
                }
            ],
            conditions: {
                creature: true
            }
        },
        {
            type: "compound",
            children: [
                {
                    type: "image",
                    src: "crowns/legendary/artifact.png",
                    conditions: {
                        artifact: true,
                        colorCount: 0
                    }
                },
                {
                    type: "image",
                    src: "crowns/legendary/colorless.png",
                    "conditions": {
                        artifact: false,
                        colorCount: 0
                    }
                },
                {
                    type: "image",
                    src: "crowns/legendary/${card.color}.png",
                    conditions: {
                        colorCount: 1
                    }
                },
                {
                    type: "image",
                    src: "crowns/legendary/${card.color}.png",
                    conditions: {
                        colorCount: 2
                    }
                },
                {
                    type: "image",
                    src: "crowns/legendary/gold.png"
                }
            ],
            conditions: {
                legendary: true
            }
        },
        [
            {
                type: "image",
                src: "plates/land.png",
                conditions: {
                    land: true
                }
            },
            {
                type: "image",
                src: "plates/artifact.png",
                conditions: {
                    artifact: true,
                    colorCount: 0
                }
            },
            {
                type: "image",
                src: "plates/colorless.png",
                "conditions": {
                    artifact: false,
                    colorCount: 0
                }
            },
            {
                type: "image",
                src: "plates/${card.color}.png",
                conditions: {
                    colorCount: 1
                }
            },
            {
                type: "image",
                src: "plates/colorless.png",
                "conditions": {
                    hybrid: true
                }
            },
            {
                type: "image",
                src: "plates/gold.png"
            }
        ],
        {
            type: "squish",
            main: {
                type: "text",
                value: "${card.cost}",
                alignment: "right",
                x: 2925,
                y: 515
            },
            flex: {
                type: "text",
                value: "${card.name}",
                style: "name",
                x: 395,
                y: 515
            }
        }
    ]
}